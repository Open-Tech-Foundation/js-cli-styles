{
  "name": "@opentf/cli-styles",
  "version": "0.4.1",
  "description": "Style your CLI text using ANSI escape sequences.",
  "keywords": [
    "ansi",
    "cli",
    "style",
    "string",
    "text",
    "color",
    "format",
    "console"
  ],
  "author": {
    "name": "Thanga Ganapathy",
    "email": "ganapathy888@gmail.com",
    "url": "https://thanga-ganapathy.github.io"
  },
  "license": "MIT",
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/open-tech-foundation/js-cli-styles.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/types.d.ts",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "jest",
    "lint": "eslint src/** --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "type-check": "tsc",
    "ci": "turbo run build test lint type-check",
    "prepare": "husky install",
    "publish-packages": "turbo run ci && changeset version && changeset publish"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "pnpm run format",
      "pnpm run lint"
    ],
    "*.json": [
      "npm run format"
    ]
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@opentf/eslint-config-base": "^0.1.0",
    "@swc/core": "^1.3.37",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.4.0",
    "eslint": "^8.35.0",
    "highlight.js": "^11.7.0",
    "html-entities": "^2.3.3",
    "husky": "^8.0.0",
    "jest": "^29.4.3",
    "lint-staged": "^13.1.2",
    "tsup": "^6.6.3",
    "turbo": "^1.8.3",
    "typescript": "^4.9.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
